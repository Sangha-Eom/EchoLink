<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.Priority?>

<VBox alignment="CENTER" spacing="15.0" prefWidth="500.0" prefHeight="400.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://www.w3.org/2001/fxml-1" fx:controller="com.EchoLink.server.gui.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Text text="EchoLink Server" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <Label fx:id="statusLabel" text="서버 실행 중... 모바일 클라이언트의 연결을 기다립니다." style="-fx-font-weight: bold;"/>

    <TextArea fx:id="logTextArea" editable="false" wrapText="true" prefHeight="200.0"/>

    <Button fx:id="logoutButton" text="로그아웃" onAction="#handleLogout" prefHeight="40.0" style="-fx-font-size: 14px; -fx-base: #f08080;"/>

</VBox>
